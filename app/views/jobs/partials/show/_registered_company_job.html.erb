<div class="card">
  <div class="job-card">
    <%= link_to company_path(@job.company) do %>
      <%= image_tag @job.company.logo_url, class: "show-logo" %>
    <% end %>
    <h3><%= @job.company.name %></h3>
    <h1><%= @job.title %></h1>
    <h3 style="color: #5DB1D1";><%= @job.salary %></h3>
  </div>
</div>

  <div style="padding: 10px; background-color: white;" class="text-center">
    <%= link_to "Apply", new_job_job_candidate_path(@job), remote: true, class: "btn btn-success btn-lg" %>
  </div>

<div class="container">
  <br>
  <div class="col-md-12">
    <span><i class="fas fa-globe" aria-hidden="true"></i> <%= @job.location %></span>
    <span style="margin-left: 40px; color: #5DB1D1;"><i class="far fa-clock" aria-hidden="true"></i> <%= @job.job_type %></span>
  </div>
  <% if current_user %>
    <div class="col-md-3", style="margin-top: 40px;">
      <%= link_to "Edit job details", edit_company_job_path(@job.company, @job),  class: "btn btn-md btn-block btn-outline-primary"%>
    </div>
  <% end %>

  <div style="margin-top: 40px;" class="col-md-10">
   <%= @job.description %>
  </div>
  <br>
  <div class="col-md-9">
    <h3>Perks & Benefits at <%= @job.company.name %> </h3>
    <br>
    <br>
    <div class="row">
      <% @job.company.perks.all.each do |perk| %>
        <input style="display: none", class="hidden", type="checkbox", value="<%= perk.id %>" name="company[perk_ids][]" id="company_perk_ids_<%= perk.id %>"/>
        <div class="col-md-4 perk-choices">
          <label class="perk-choice" for="company_perk_ids_<%= perk.id %>">
            <i class="<%= perk.icon %>" aria-hidden="true"></i>
            <br>
            <%= perk.name %>
          </label>
        </div>
      <% end %>
    </div>
  </div>
</div>
