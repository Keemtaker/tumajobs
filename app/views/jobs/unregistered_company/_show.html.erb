<div class="container">
  <div class="card bg-transparent" style="border: none !important;">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-2" style="margin-bottom: 30px;">
          <% if @job.unregistered_company_logo? %>
            <%= image_tag @job.unregistered_company_logo_url, class: "show-logo" %>
          <% else %>
            <%= image_tag "fallback.png", class: "show-logo" %>
          <% end %>
        </div>
        <div class="col-sm-8">
          <h1><%= @job.title %></h1>
          <span class="job-info">
            <h3 style="color: #5DB1D1;"><%= @job.unregistered_company_name %></h3>
            <h3><%= @job.salary %></h3>
          </span>
        </div>
      </div>
    </div>
  </div>
  <br>

  <div class="col-md-10">
    <% if @job.job_email? %>
      <%= link_to "Quick Apply", new_job_talent_path(@job), class: "btn btn-success btn-lg" %>
    <% else %>
      <%= link_to "Apply", @job.job_url, :target => "_blank", class: "btn btn-success btn-lg fas fa-external-link-alt" %>
    <% end %>
  </div>
  <br>

  <%= render "jobs/unregistered_company/shared_forms/show_create" %>
</div>

