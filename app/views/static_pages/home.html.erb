<head>
  <meta name="description" content="Find recent jobs in Ghana and accelerate your career. Quicly post a job in 5 minutes and attract qualified caniddates. Recruit the best talents">
  <title>Ghana Jobs and Positions</title>
</head>

  <main role="main">
    <section class="jumbotron-home text-center" style="background-color: seashell;">
      <div class="container">
        <h1 class="jumbotron-heading">TUMAJOBS</h1>
        <p class="lead text-muted">This is a career portal that connects Ghanaian institutions with talented Job Seekers. A simplified platform to find and list jobs</p>
        <p>
          <%= link_to "Post a Job for only GHâ‚µ25", new_job_path, class: "btn btn-primary my-2" %>
          <%= link_to "Find jobs", jobs_path, class: "btn btn-secondary my-2" %>
        </p>
      </div>
    </section>
    <br>
    <div class="col-sm-8 offset-sm-2">
      <h2>Recent Jobs</h2>
      <div class="jobs">
        <% @jobs.each do |job| %>
          <% if job.company %>
            <%= link_to company_job_path(job.company, job) do %>
              <div class="card" style="margin-bottom: 30px;">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-2" style="align-self: center;">
                        <% if job.company.logo? %>
                          <%= image_tag job.company.logo_url, class: "show-logo" %>
                        <% else %>
                          <%= image_tag "fallback.png", class: "show-logo" %>
                        <% end %>
                    </div>
                    <div class="col-sm-8" style="margin-top: 15px;">
                      <h5><%= job.title %></h5>
                      <span class="job-info">
                        <h5 style="color: #5DB1D1;"><%= job.company.name %></h5>
                        <h5><%= job.location %></h5>
                        <h5><%= job.job_type %></h5>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <%= link_to job_path(job) do %>
              <div class="card" style="margin-bottom: 30px;">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-2" style="align-self: center;">
                        <% if job.unregistered_company_logo? %>
                          <%= image_tag job.unregistered_company_logo_url, class: "show-logo" %>
                        <% else %>
                          <%= image_tag "fallback.png", class: "show-logo" %>
                        <% end %>
                    </div>
                    <div class="col-sm-8" style="margin-top: 15px;">
                      <h5><%= job.title %></h5>
                      <span class="job-info">
                        <h5 style="color: #5DB1D1;"><%= job.unregistered_company_name %></h5>
                        <h5><%= job.location %></h5>
                        <h5><%= job.job_type %></h5>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-2 offset-sm-5">
      <%= link_to "View all Jobs", jobs_path, class: "btn btn-outline-primary btn-block" %>
    </div>
    <br>
  </main
