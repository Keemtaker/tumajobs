<div class="container">
  <div class="card bg-transparent text-center" style="border: none !important;">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-2" style="margin-bottom: 30px;">
          <% if @company.logo?  %>
            <%= image_tag @company.logo.current_path.split('public').last, class: "show-logo" %>
          <% else %>
            <%= image_tag "fallback.png", class: "show-logo" %>
          <% end %>
        </div>
        <div class="col-sm-8">
          <h1><%= @company.name %></h1>
          <span class="job-info">
            <h3 style="color: #5DB1D1;"><%= @company.location %></h3>
            <h3><%= @company.address %></h3>
          </span>
        </div>
      </div>
    </div>
  </div>
  <br>

  <%= render "companies/shared_forms/show_create" %>
</div>
