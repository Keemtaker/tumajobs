<%= simple_form_for [@company], html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f| %>
  <div class="container">
    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :name,  :label => "Name of Company" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :description, as: :rich_text_area, :label => "Description" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :location, :label => "City" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :address, :label => "Address" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :logo, :label => "Company Logo" %>
        <%= f.input :logo_cache, as: :hidden %>
      </div>
    </div>

    <br>
    <h1>Perks & Benefits</h1>
    <br>
    <p1>Select perks and benefits that your company offers to employees</p1>
    <br>
    <br>
    <div class="form-group">
      <div class="col-md-9">
        <div class="row">
          <% Perk.all.each do |perk| %>
            <input style="display: none", class="hidden", type="checkbox", value="<%= perk.id %>" name="company[perk_ids][]" id="company_perk_ids_<%= perk.id %>"/>
            <div class="col-md-4 perk-choices">
              <label class="perk-choice" for="company_perk_ids_<%= perk.id %>">
                <i class="<%= perk.icon %>" aria-hidden="true"></i>
                <br>
                <%= perk.name %>
              </label>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9 text-center" style="margin-top: 110px;">
        <%= f.button :submit , name: "previewButt", value: "Preview", formtarget:"_blank", data: { disable_with: false } %>
        <%= f.button :submit , name: "createButt", value: "Submit", class: "btn btn-success post-btn", data: { disable_with: false } %>
      </div>
      <div class="col-md-9" style="margin-top: 80px;">
        <p style="color: gray;">Click <strong>Preview</strong> to see how your company profile would appear to applicants. The preview would open in a new tab. Return back to this page to <strong>Submit</strong> or make <strong>Edits</strong>.</p>
      </div>
    </div>
<% end %>
